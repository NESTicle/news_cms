@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Create a new Role</h4>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name of the Role", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success btn-fill pull-right">
                    <i class="fa fa-check"></i> Save Role
                </button>
                <div class="clearfix"></div>
            </div>
        </div>

        <a href="@Url.Action("Index", "Category")" class="btn btn-info btn-fill">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
