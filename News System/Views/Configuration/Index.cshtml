@model News_System.Models.Configuration

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Configuration"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h4 class="title">Configuration</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                </div>
                <div class="content">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.WebsiteTitle)
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-newspaper-o"></i>
                                    </div>
                                    @Html.EditorFor(model => model.WebsiteTitle, new { htmlAttributes = new { @class = "form-control", @autocomplete="off", @placeholder="Website Title" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.WebsiteTitle, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Slogan)
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-hashtag"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Slogan, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Slogan of the Website" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Slogan, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)

                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-envelope-o"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Email" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Disqus)
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-comments-o"></i>
                                    </div>
                                    @Html.EditorFor(model => model.Disqus, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Disqus Name (without .disqus.com)" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.Disqus, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Url)
                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @placeholder = "Url" } })
                                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ads_300)
                                @Html.TextAreaFor(model => model.Ads_300, new { @class = "form-control", @rows = "12", @autocomplete = "off", @placeholder = "Ads 300x250" })
                                @Html.ValidationMessageFor(model => model.Ads_300, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ads_728)
                                @Html.TextAreaFor(model => model.Ads_728, new { @class = "form-control", @rows = "12", @autocomplete = "off", @placeholder = "Ads 728x90" })
                                @Html.ValidationMessageFor(model => model.Ads_728, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Ads_970)
                                @Html.TextAreaFor(model => model.Ads_970, new { @class = "form-control", @rows = "12", @autocomplete = "off", @placeholder = "Ads 970x90" })
                                @Html.ValidationMessageFor(model => model.Ads_970, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Analytics)
                                @Html.TextAreaFor(model => model.Analytics, new { @class = "form-control", @rows = "12", @autocomplete = "off", @placeholder = "Google Analytics" })
                                @Html.ValidationMessageFor(model => model.Analytics, "", new { @class = "text-danger help-block" })
                            </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-success btn-fill pull-right">
                        <i class="fa fa-check"></i> Update Configuration
                    </button>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
}


